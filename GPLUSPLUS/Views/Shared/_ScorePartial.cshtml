@model GPLUSPLUS.Models.HomeModel

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")

@Scripts.Render("~/bundles/jquerypercentage")
@Styles.Render("~/Content/percentagecss")
<style>
    #topLoader_Left, #topLoader_Right {
        width: 256px;
        height: 256px;
        margin-bottom: 32px;
        margin: 5px auto 30px auto;
    }

    #animateButton, #btn_score {
        font-family: 'B Koodak','Microsoft Sans Serif';
        width: 150px;
        margin: 10px,50px,15px,5px;
    }
</style>




@*<div class="myRegisration" style="float:right;direction:rtl">*@

<div class="container">
    <div class="row">



        <div id="myform">
            <div class="col-sm-4 col-md-4 myCol">

                <div style="width: 100%; background: #00a99d; -moz-border-radius: 10px 10px 10px 10px; -webkit-border-radius: 10px 10px 10px 10px; border-radius: 10px 10px 10px 10px; overflow: hidden; direction: rtl; text-align: center">
                    <div style="background: #068980; padding: 5px;">
                        <h2> امتیاز خرید شما در کل</h2>

                    </div>
                    <div class="myPanel" style="padding-top: 10px">
                        <div id="topLoader_Left">
                        </div>

                    </div>
                </div>

                <script>
                    $(function () {
                        var $topLoader = $("#topLoader_Left").percentageLoader({
                            width: 256, height: 256, controllable: true, progress: ' @ViewBag.PercentageScore', value: '@ViewBag.TotalScore', onProgressUpdate: function (val) {
                                $topLoader.setValue(Math.round(val * 100.0));
                            }
                        });

                        var topLoaderRunning = false;
                        $("#animateButton").click(function () {
                            if (topLoaderRunning) {
                                return;
                            }
                            topLoaderRunning = true;
                            $topLoader.setProgress(0);
                            $topLoader.setValue('0kb');
                            var kb = 0;
                            var totalKb = 999;

                            var animateFunc = function () {
                                kb += 17;
                                $topLoader.setProgress(kb / totalKb);
                                $topLoader.setValue(kb.toString() + 'kb');

                                if (kb < totalKb) {
                                    setTimeout(animateFunc, 25);
                                } else {
                                    topLoaderRunning = false;
                                }
                            }

                            setTimeout(animateFunc, 25);

                        });
                    });
      </script>

            </div>

            <div class="col-sm-4 col-md-4 myCol">
                <div style="width: 100%; background: #39b54a; -moz-border-radius: 10px 10px 10px 10px; -webkit-border-radius: 10px 10px 10px 10px; border-radius: 10px 10px 10px 10px; overflow: hidden; direction: rtl; text-align: center">
                    <div style="background: #007236; padding: 5px;">
                        <h2>امتیاز قرعه کشی</h2>

                    </div>
                    <div class="myPanel" >
                       <div class="Scorewrap" style="margin-top:auto;margin-bottom:auto;">
                            <div class="Scorein" style="text-align:center;font-size:xx-large;">@ViewBag.LotteryScore</div>
                        </div> 

                        @*<div style="width: 100%; background: #39b54a; -moz-border-radius: 10px 10px 10px 10px; -webkit-border-radius: 10px 10px 10px 10px; border-radius: 10px 10px 10px 10px; overflow: hidden; direction: rtl; text-align: center;margin-top:80px">
                            <div style="background: #007236; padding: 5px;">
                                <h2>امتیاز بنیاد کودک </h2>

                            </div>
                            <div>
                                <div class="Scorewrap" style="margin-top:auto;margin-bottom:auto;">
                                    <div class="Scorein" style="text-align:center;font-size:xx-large;">@ViewBag.BonyadKoodakScore </div>
                                </div>
                            </div>
                        </div>*@


                    </div>
                </div>
            </div>

            <div class="col-sm-4 col-md-4 myCol">
                <div style="width: 100%; background: #f7941d; -moz-border-radius: 10px 10px 10px 10px; -webkit-border-radius: 10px 10px 10px 10px; border-radius: 10px 10px 10px 10px; overflow: hidden; direction: rtl; text-align: center">
                    <div style="background: #f26522; padding: 5px;">
                        <h2>امتیاز خرید شما در جزء</h2>

                    </div>
                    <div class="myPanel" style="padding-top: 10px">
                        <div id="topLoader_Right">
                        </div>

                    </div>
                </div>

                <script>
                    $(function () {
                        var $topLoader = $("#topLoader_Right").percentageLoader({
                            width: 256, height: 256, controllable: true, progress: ' @ViewBag.PercentageScore_part', value: '@ViewBag.TotalScore', onProgressUpdate: function (val) {
                                $topLoader.setValue(Math.round(val * 100.0));
                            }
                        });

                        var topLoaderRunning = false;
                        $("#animateButton").click(function () {
                            if (topLoaderRunning) {
                                return;
                            }
                            topLoaderRunning = true;
                            $topLoader.setProgress(0);
                            $topLoader.setValue('0kb');
                            var kb = 0;
                            var totalKb = 999;

                            var animateFunc = function () {
                                kb += 17;
                                $topLoader.setProgress(kb / totalKb);
                                $topLoader.setValue(kb.toString() + 'kb');

                                if (kb < totalKb) {
                                    setTimeout(animateFunc, 25);
                                } else {
                                    topLoaderRunning = false;
                                }
                            }

                            setTimeout(animateFunc, 25);

                        });
                    });
      </script>

            </div>

        </div>
    </div>

</div>








