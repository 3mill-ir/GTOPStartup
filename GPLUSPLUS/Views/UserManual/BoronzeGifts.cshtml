    .datagrid table { border-collapse: collapse; text-align: center; width: 100%; } 
    .datagrid {font: normal 12px/150% ,B Koodak,Arial, sans-serif; background: #fff; overflow: hidden; border: 1px solid #275420; -webkit-border-radius: 7px; -moz-border-radius: 7px; border-radius: 7px; }
    .datagrid table td, .datagrid table th { padding: 3px 2px;text-align:center;width:auto; }
