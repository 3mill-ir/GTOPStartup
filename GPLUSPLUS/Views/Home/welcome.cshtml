@{
    ViewBag.Title = "GPLUSPLUS";
    Layout = "~/Views/Shared/_LayoutUnAuth.cshtml";
}

<style>
    .SliderText {
        padding-top: 50px;
    }
</style>

<section id="slider" style="margin-top: 150px">
    <!--slider-->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#slider-carousel" data-slide-to="1"></li>
                        <li data-target="#slider-carousel" data-slide-to="2"></li>
                        <li data-target="#slider-carousel" data-slide-to="3"></li>
                    </ol>

                    <div class="carousel-inner" style="direction: rtl">
                        <div class="item active">
                            <div class="col-sm-6 SliderText">
                                <h2>بیشتر بدانیم</h2>
                                <p>امتیاز کارت GCARD نوعی کارت شناسایی است که به دارنده کارت این امکان را می دهد که بتواند از تخفیفات و خدمات ویژه بسیاری از مراکز درمانی، بیمارستانها، مطب ها و فروشگاهها و ... حتی مراکزی که در شرایط عادی امکان دریافت تخفیف وجود ندارد و  طرف قرارداد GTOP می باشند بهره مند گردد.</p>
                                @* <button type="button" class="btn btn-default get">Get it now</button>*@
                            </div>
                            <div class="col-sm-6">
                                <img src="../../Images/gplus-plus-3-min.jpg" class="girl img-responsive" alt="" />
                                @*  <img src="~/Content/HomeContent/images/home/placeholder.png" class="girl img-responsive" alt="" />*@
                                @*<img src="~/Content/HomeContent/images/home/pricing.png" class="pricing" alt="" />*@

                            </div>
                        </div>
                        <div class="item">
                            <div class="col-sm-6 SliderText">
                                <h2>مزاياي پذيرنده امتیاز کارت</h2>
                                <p>
                                    بهره مندي از ابزاري جهت تکريم مشتريان<br />
                                    بهره مندي از نتايج احساس تکريم از سوي مشتريان<br />
                                    بازگشت مشتريان براي خريد هاي مجدد با توجه به انگيزش هاي ايجاد شده در خريد قبلي<br />
                                    بهره مندي از تبليغات غير مستقيم مشتريان وفادار
                                    <br />
                                    معرفي مشتريان جديد توسط مشتريان وفادار<br />
                                </p>
                                @*     <button type="button" class="btn btn-default get">Get it now</button>*@
                            </div>
                            <div class="col-sm-6">
                                <img src="../../Images/gplus-plus-4-min.jpg" class="girl img-responsive" alt="" />
                                @*   <img src="~/Content/HomeContent/images/home/placeholder.png" class="girl img-responsive" alt="" />*@
                                @*     <img src="~/Content/HomeContent/images/home/pricing.png" class="pricing" alt="" />*@
                            </div>
                        </div>

                        <div class="item">
                            <div class="col-sm-6 SliderText">
                                <h2>از کجا و چگونه تهیه کنیم</h2>
                                <p>شما با خرید از فروشگاهها و مراکز طرف قرارداد GTOP می توانید کارت امتیازی GPLUS دریافت کنید. سپس با مراجعه به سایت کد 16 رقمی درج شده رو کارت را در سایت ثبت و امتیاز دریافت خواهید کرد. شما با توجه به امتیاز خود قادر به خرید از سایت GPLUSPLUS خواهید شد.</p>
                                @*        <button type="button" class="btn btn-default get">Get it now</button>*@
                            </div>
                            <div class="col-sm-6">
                                <img src="../../Images/gplus-plus-1-min.jpg" class="girl img-responsive" alt="" />
                                @*  <img src="~/Content/HomeContent/images/home/placeholder.png" class="girl img-responsive" alt="" />*@
                                @*  <img src="~/Content/HomeContent/images/home/pricing.png" class="pricing" alt="" />*@
                            </div>
                        </div>

                        <div class="item">
                            <div class="col-sm-6 SliderText">
                                <h2>و اما جایزه بزرگ GTOP</h2>
                                <p>شما با رساندن حد امتیاز خود به جایزه بزرگ GTOP بدون قرعه کشی صاحب یک دستگاه خودروی النترا خواهید شد.  </p>
                                @*           <button type="button" class="btn btn-default get">Get it now</button>*@
                            </div>
                            <div class="col-sm-6">
                                <img src="../../Images/gplus-plus-min.jpg" class="girl img-responsive" alt="" />
                                @*     <img src="~/Content/HomeContent/images/home/placeholder.png" class="girl img-responsive" alt="" />*@
                                @*   <img src="~/Content/HomeContent/images/home/pricing.png" class="pricing" alt="" />*@
                            </div>
                        </div>

                    </div>

                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>

            </div>
        </div>
    </div>
</section>
<!--/slider-->


<div class="container">
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
            <div style="margin-top:10px;text-align:center" id="myBonyadKoodakBootstrap">
                <a href="https://www.childf.com/" target="_blank">
                    <i class=" bonyadkoodak">
                        <img src="~/Images/BonyadKoodak.gif" width="200" />
                    </i>
                </a>
                <div style="text-align:center">
                    <p style="position: relative;
	width: 200px;
	height: 100px;
	text-align: center;
	line-height: 50px;
	background-color: #fff;
	border: 8px solid #666;
	-webkit-border-radius: 30px;
	-moz-border-radius: 30px;
	border-radius: 30px;
	-webkit-box-shadow: 2px 2px 4px #888;
	-moz-box-shadow: 2px 2px 4px #888;
	box-shadow: 2px 2px 4px #888;direction:rtl;margin:auto">امتیاز اهدایی به بنیاد کودک :<br /><span id="BonyadKoodakEmtiaz"> @ViewBag.BonyadKoodakScore امتیاز </span></p>
</div>
</div>
</div>
</div>
</div>
<!-- main content -->

<div class="container">
    <div class="row" style="margin-top: 5px">
        <div class="col-sm-6">
            <div class="row">
                <div class="col-sm-12">
                    <img src="~/Content/HomeContentUnAuth/Price/images/GPLUS-eshop.png" class="img-responsive" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    @Html.Partial("_HomeSliderUnAuth")
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div style="margin: 0 1.5% 0px 1.5%">
                        <a href="~/Eshop/Home">
                            <img id="Eshop_Nav" src="~/Content/HomeContentUnAuth/Price/images/Eshop-Enter.png" class="img-responsive" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="row">
                <div class="col-sm-12">
                    <img src="~/Content/HomeContentUnAuth/Price/images/GPLUS-seller.png" class="img-responsive" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    @Html.Partial("_HomeSliderUnAuthSeller")
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div style="margin: 0 1.5% 0px 1.5%">
                        <a href="~/Seller/Home">
                            <img id="Seller_Nav" src="~/Content/HomeContentUnAuth/Price/images/seller-enter.png" class="img-responsive" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row" style="margin-top: 40px">
            <div class="col-sm-12">
                @Html.Action("GPlusNews")
            </div>
        </div>
    </div>
</div>




@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
<script>
    $(document).ready(function () {
        $("#Seller_Nav").hover(function () {
            this.src = 'Content/HomeContentUnAuth/Price/images/seller-enter-hover.png'
        }, function () {
            this.src = 'Content/HomeContentUnAuth/Price/images/seller-enter.png'
        }
  );
        $("#Eshop_Nav").hover(function () {
            this.src = 'Content/HomeContentUnAuth/Price/images/Eshop-Enter-hover.png'
        }, function () {
            this.src = 'Content/HomeContentUnAuth/Price/images/Eshop-Enter.png'
        }
);


        setInterval(function () {
            $("#BonyadKoodakEmtiaz").toggleClass('blinking');
        }, 1000);
        setInterval(function () {
            $("#myBonyadKoodakBootstrap").toggleClass('blinking');
        }, 1000);


    });



</script>
