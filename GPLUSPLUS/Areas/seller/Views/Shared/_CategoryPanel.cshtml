                            </div>
                        </div>


    <h2>بخش بندی</h2>
    <div class="panel-group category-products" id="accordian1">
        <!--category-productsr-->
        @foreach (var q in Model.DetailedTypes)
        {

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordian1" href="#State_@q.Shop_state_Id">
                            @q.Shop_state_Name
                            <span class="badge pull-center"><i class="fa fa-plus"></i></span><span class="pull-left">@q.Shop_state_Count</span>
                        </a>
                    </h4>
                </div>


                <div id="State_@q.Shop_state_Id" class="panel-collapse collapse">
                    <div class="panel-body">
                        <div class="panel-group" id="State_City_@q.Shop_state_Id">
                            @foreach (var p in q.Types)
                            {
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#State_City_@q.Shop_state_Id" href="#City_@p.Shop_city_Id">
                                                @p.Shop_city_Name
                                                <span class="badge pull-center"><i class="fa fa-plus"></i></span><span class="pull-left">@p.Shop_city_Count</span>
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="City_@p.Shop_city_Id" class="panel-collapse collapse">
                                        @foreach (var r in p.Types)
                                        {
                                            <div class="panel-body">
                                                <a href="@Url.Action("ShopsList","Shops",new {City = @p.Shop_city_Name,Category=@r.ShopTypesName })">
                                                    @r.ShopTypesName
                                                    <span class="badge pull-center"></span><span class="pull-left">@r.ShopTypesCount</span>
                                                </a>
                                            </div>

                                        }
                                          <div class="panel-body">
                                                <a href="@Url.Action("ShopsList","Shops",new {City = @p.Shop_city_Name,Category="All"})">
                                                    همه
                                                    <span class="badge pull-center"></span><span class="pull-left">@p.Shop_city_Count</span>
                                                </a>
                                            </div>
                                    </div>
                                </div>
                            }

                        </div>

                    </div>
                </div>
            </div>
        }
    </div>






