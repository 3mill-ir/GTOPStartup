           <div class="brands_products" style="margin-bottom: 50px">
                            <!--brands_products-->
                            <h2>دسته بندی</h2>
                            <div class="brands-name">
                                <ul class="nav nav-pills nav-stacked">
                                    @foreach (var q in Model.Types) {
                                     <li><a  href="@Url.Action("ShopsList","Shops",new {City = "All",Category=@q.ShopTypesName })"><span class="pull-left">(@q.ShopTypesCount)</span>@q.ShopTypesName</a></li>
                                    }
